{
    "env": {
      "jquery": true
    },
    "overrides": [
      {
        "files": [ "src/js/*.js" ],
        "extends": [
          "standard",
          "htmlacademy/es6"
        ],
        "rules": {
          "indent": [
            "error",
            2
          ], 
          "semi": [
            "error",
            "never"
          ],
          "quotes": [
            "error",
            "single"
          ],
          "no-trailing-spaces": [
            2, { "skipBlankLines": true }
          ]
        }
      }
    ]
  }